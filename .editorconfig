# =============================================================================
# EditorConfig - Sirius High-Integrity Coding Standard Enforcement
# Version 1.0 - CUDA/C++ Project Standards
# https://editorconfig.org
# =============================================================================

root = true

# =============================================================================
# All Files - Universal Settings
# =============================================================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# C/C++ Source Files
# =============================================================================

[*.{c,cpp,cc,cxx,h,hpp,hxx,inl}]
indent_size = 4
tab_width = 4
max_line_length = 120

# =============================================================================
# CUDA Source Files
# =============================================================================

[*.{cu,cuh}]
indent_size = 4
tab_width = 4
max_line_length = 120

# =============================================================================
# CMake Files
# =============================================================================

[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# =============================================================================
# Shader Files (Legacy/Reference)
# =============================================================================

[*.{glsl,vert,frag,comp,hlsl}]
indent_size = 4

# =============================================================================
# Configuration Files
# =============================================================================

[*.{json,yaml,yml}]
indent_size = 2

[*.xml]
indent_size = 2

# =============================================================================
# Documentation
# =============================================================================

[*.md]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# Git Configuration
# =============================================================================

[.gitignore]
insert_final_newline = true

[.gitmodules]
indent_style = tab

# =============================================================================
# Makefiles
# =============================================================================

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# =============================================================================
# Windows-Specific (CRLF allowed for batch files)
# =============================================================================

[*.{bat,cmd}]
end_of_line = crlf

[*.ps1]
end_of_line = crlf

# =============================================================================
# Visual Studio Project Files
# =============================================================================

[*.{vcxproj,vcxproj.filters,sln}]
indent_style = space
indent_size = 2
end_of_line = crlf
